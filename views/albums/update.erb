<section id="update-album" style="  background-image: url('<%= @album.artwork %>');">

<form action="/albums/<%= @album.id %>/update" method="post">
  <h1 class="center">Update Album</h1>
  <div>
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @album.title %>">
</div>
<div>
  <label for="artwork">Artwork Link:</label>
  <input type="text" name="artwork" value="<%= @album.artwork %>">
</div>
<div>
  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="<%= @album.genre %>">
</div>
<div>
  <label for="stock">Stock:</label>
  <input type="number" name="stock" id="stock" value="<%= @album.stock %>">
</div>
<div>
  <label for="buy_price">Buy Price:</label>
  <input type="number" name="buy_price" id="buy_price" value="<%= @album.buy_price %>">
</div>
<div>
  <label for="sell_price">Sell Price:</label>
  <input type="number" name="sell_price" id="sell_price" value="<%= @album.sell_price %>">
</div>
  <input type="hidden" name="artist_id" id="artist_id" value="<%= @album.artist.id %>">
  <input type="submit" class="button" value="Update Album">
</form>
</section>
