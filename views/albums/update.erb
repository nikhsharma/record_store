<form action="/albums/<%= @album.id %>/update" method="post">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @album.title %>">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" value="<%= @album.genre %>">

  <label for="stock">Stock:</label>
  <input type="number" name="stock" id="stock" value="<%= @album.stock %>">

  <label for="buy_price">Buy Price:</label>
  <input type="number" name="buy_price" id="buy_price" value="<%= @album.buy_price %>">

  <label for="sell_price">Sell Price:</label>
  <input type="number" name="sell_price" id="sell_price" value="<%= @album.sell_price %>">

  <input type="submit" value="Update Album">
</form>
