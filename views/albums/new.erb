<section id="new-album">


<form class="new-album" action="/albums" method="post">
  <h1 class="center">Add new Album | <a class="new-link" href="/artists/new">Add new Artist</a> </h1>
  <label id="selectlabel" class="center" for="artist_id">Select an artist:</label>
  <select  name="artist_id" id="artist_id">
    <% @artists.each do |artist| %>
    <option value=<%= artist.id %>><%= artist.name %></option>
    <% end %>
  </select>
  <br />
  <div>
  <label for="title">Title:</label>
  <input type="text" name="title" id="title">
</div>
  <br />
  <div>
  <label for="artwork">Artwork Link:</label>
  <input type="text" name="artwork" id="artwork">
</div>
<br />
<div>
  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre">
</div>
<br />
<div>
  <label for="stock">Stock:</label>
  <input type="number" name="stock" id="stock">
</div>
<br />
<div>
  <label for="buy_price">Buy Price:</label>
  <input type="number" name="buy_price" id="buy_price">
</div>
<br />
<div>
  <label for="sell_price">Sell Price:</label>
  <input type="number" name="sell_price" id="sell_price">
</div>
<br />
  <input type='submit'class="button" value="Create Album">
</form>

</section>
