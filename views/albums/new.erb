<h1 class="center">Add new Album | <a class="new-link" href="/artists/new">Add new Artist</a> </h1>

<form action="/albums" method="post">
  <label for="artist_id">Select an artist:</label>
  <select  name="artist_id" id="artist_id">

    <% @artists.each do |artist| %>
    <option value=<%= artist.id %>><%= artist.name %></option>
    <% end %>
  </select>

  <label for="title">Title:</label>
  <input type="text" name="title" id="title">

  <label for="artwork">Artwork Link:</label>
  <input type="text" name="artwork" id="artwork">

  <label for="genre">Genre:</label>
  <input type="text" name="genre" id="genre">

  <label for="stock">Stock:</label>
  <input type="number" name="stock" id="stock">

  <label for="buy_price">Buy Price:</label>
  <input type="number" name="buy_price" id="buy_price">

  <label for="sell_price">Sell Price:</label>
  <input type="number" name="sell_price" id="sell_price">

  <input type='submit' value="Create Album">
</form>
