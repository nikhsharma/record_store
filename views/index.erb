<h1 class="center">Records & Stuff</h1>

<form class="center search" action="/search" method="get">
  <label for="name"></label>
  <input type="text" name="name" >
  <input type="submit" value="Search Artists">
</form>

<table class="center">
  <tr>
    <th>Artist</th>
    <th>Albums</th>
    <th>Stock Level</th>
  </tr>
  <% @artists.each do |artist| %>
  <tr>
    <td> <a href="/artists/<%= artist.id %>"><%= artist.name %></a> </td>
    <td>
    <% artist.albums.each do |album| %>
    <a href="/albums/<%= album.id %>"><%= album.title %></a>
    <br />
    <% end %>
  </td>
    <td>
    <% artist.albums.each do |album| %>
    <%= album.stock_level %>
    <br />
    <% end %>
  </td>
  </tr>
  <% end %>

</table>

<section id="random-covers">
  <%  covers = @albums.map { |album| album.artwork }.sample(4) %>
  <% covers.each do |cover| %>
  <img class="cover-image" src="<%= cover %>" alt="">
  <% end %>
</section>
